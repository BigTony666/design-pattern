{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-bitwise": "off",
        "no-lonely-if": "off",
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "no-loop-func": "off",
        "max-len": "off",
        "func-names": "off",
        "prefer-arrow-callback": "off"
    }
}